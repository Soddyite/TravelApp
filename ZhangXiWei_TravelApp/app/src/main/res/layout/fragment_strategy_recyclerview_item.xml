<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/strategy_back_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/strategy_place_chinesename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="日本"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/strategy_place_englishname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/strategy_place_chinesename"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:text="JAPAN"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/strategy_poi_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@color/colorTransparentBlack"
        android:padding="3dp"
        android:text="1000 旅行地"
        android:textColor="@color/colorWhite" />


</RelativeLayout>