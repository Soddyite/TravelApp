<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近浏览" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strategy_recent_record_1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="日本" />

        <TextView
            android:id="@+id/strategy_recent_record_2"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="美国" />

        <TextView
            android:id="@+id/strategy_recent_record_3"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="泰国" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strategy_recent_record_4"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="台湾" />

        <TextView
            android:id="@+id/strategy_recent_record_5"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="尼泊尔" />

        <TextView
            android:id="@+id/strategy_recent_record_6"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorAlmostWhite"
            android:gravity="center"
            android:text="缅甸" />

    </LinearLayout>

</LinearLayout>