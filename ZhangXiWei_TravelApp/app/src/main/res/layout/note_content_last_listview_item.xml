<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.dllo.zhangxiwei_travelapp.utils.MyImageView
        android:id="@+id/note_content_in_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/five"
        android:layout_marginTop="@dimen/ten" />

    <TextView
        android:id="@+id/note_content_in_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_content_in_bottom_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/note_content_in_bottom_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/note_content_in_bottom_support"
                android:layout_width="@dimen/fifty"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/five"
                android:background="@color/colorAlmostWhite"
                android:button="@null"
                android:drawableLeft="@mipmap/bottom_support"
                android:gravity="center"
                android:padding="@dimen/two"
                android:text="@string/Thirty" />

            <RadioButton
                android:id="@+id/note_content_in_bottom_mail"
                android:layout_width="@dimen/fifty"
                android:layout_height="wrap_content"
                android:background="@color/colorAlmostWhite"
                android:button="@null"
                android:drawableLeft="@mipmap/bottom_mail"
                android:gravity="center"
                android:padding="@dimen/two"
                android:text="@string/Two" />

        </RadioGroup>


    </LinearLayout>

</LinearLayout>