<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e7e7">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707678" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/note_content_out_which_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="哪一天"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/note_content_out_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="日期" />

        <TextView
            android:id="@+id/note_content_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="星期" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707678" />


    <com.example.dllo.zhangxiwei_travelapp.utils.MyListView
        android:id="@+id/note_content_out_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>